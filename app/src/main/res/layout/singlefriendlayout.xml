<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:id="@+id/friend_result_image"
            android:background="@mipmap/default_pp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_alignLeft="@+id/friend_result_image"
            android:layout_marginLeft="70dp"
            android:text="USERNAME"
            android:id="@+id/friend_result_name"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER STATUS"

            android:layout_alignLeft="@+id/friend_result_image"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="35dp"
            android:textSize="10dp"
            android:id="@+id/friend_result_status" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0DAY"
            android:id="@+id/friend_result_ago"
            android:layout_alignLeft="@id/friend_result_image"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="55dp"
            android:textSize="8dp"/>

        <ImageButton
            android:id="@+id/sendMsgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/friend_result_name"
            android:layout_marginEnd="12dp"
            android:background="@mipmap/msg" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_background">

    <EditText
        android:id="@+id/register_editText_username"
        android:layout_width="336dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:alpha=".5"
        android:background="@drawable/edittext_backgrounds"
        android:hint="USERNAME"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black" />

    <EditText
        android:id="@+id/register_editText_mail"
        android:layout_width="336dp"
        android:layout_height="56dp"
        android:layout_alignStart="@+id/register_editText_username"
        android:layout_below="@+id/register_editText_username"
        android:layout_marginTop="44dp"
        android:alpha=".5"
        android:background="@drawable/edittext_backgrounds"
        android:hint="EMAIL"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black" />

    <EditText
        android:id="@+id/register_editText_password"
        android:layout_width="336dp"
        android:layout_height="56dp"

        android:layout_alignStart="@+id/register_editText_mail"
        android:layout_below="@+id/register_editText_mail"
        android:layout_marginTop="53dp"
        android:alpha=".5"
        android:background="@drawable/edittext_backgrounds"
        android:hint="PASSWORD"

        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_below="@+id/register_editText_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:alpha=".49"
        android:background="@drawable/button_background"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="#CFC1C1"
        android:textSize="22dp"
        android:textStyle="bold" />

</RelativeLayout>
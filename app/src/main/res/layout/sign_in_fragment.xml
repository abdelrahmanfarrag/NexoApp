<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_background">

    <EditText
        android:id="@+id/login_editText_mail"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:alpha=".5"
        android:background="@drawable/edittext_backgrounds"
        android:hint="EMAIL"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black" />

    <EditText
        android:id="@+id/login_editText_password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/login_editText_mail"
        android:layout_below="@+id/login_editText_mail"
        android:layout_marginTop="55dp"
        android:alpha=".5"
        android:background="@drawable/edittext_backgrounds"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black" />

    <TextView
        android:layout_width="205dp"
        android:layout_height="26dp"
        android:layout_below="@+id/login_editText_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Forgot Password ?"
        android:textAlignment="center"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#B78989"
        android:id="@+id/forgotpassword_text"
        />

    <Button
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@+id/login_editText_password"
        android:layout_below="@+id/forgotpassword_text"
        android:layout_marginTop="17dp"
        android:alpha=".49"
        android:background="@drawable/button_background"
        android:text="Sign In"
        android:textAlignment="center"
        android:textColor="#CFC1C1"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/signin_button"/>

    <TextView
        android:id="@+id/signup_text"
        android:layout_width="205dp"
        android:layout_height="26dp"
        android:layout_below="@+id/signin_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Sign Up !"
        android:textAlignment="center"
        android:textColor="#B78989"
        android:textSize="21dp"
        android:textStyle="bold" />

</RelativeLayout>
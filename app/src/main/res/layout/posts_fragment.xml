<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E">

    <Button
        android:layout_width="347dp"
        android:layout_height="44dp"
           android:text="NEW POST"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/posts_button_background"
        android:textAlignment="center"
        android:id="@+id/new_post_btn"
        android:layout_margin="20dp"
        android:onClick="change_frag"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/posts_view"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/new_post_btn"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:id="@+id/search_result_image"
            android:background="@mipmap/default_pp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_alignLeft="@+id/search_result_image"
            android:layout_marginLeft="70dp"
            android:text="USERNAME"
            android:textAlignment="center"
            android:id="@+id/search_result_name"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/search_result_status"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/search_result_name"
            android:layout_below="@+id/search_result_name"
            android:text="USER STATUS"
            android:textAlignment="textStart"
            android:textSize="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIVES"
            android:id="@+id/search_result_lives"
            android:layout_alignLeft="@id/search_result_image"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="55dp"
            android:textSize="8dp"/>

        <Button
            android:id="@+id/sentreqbtn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@+id/search_result_status"
            android:background="@android:color/holo_green_light"
            android:padding="5dp"
            android:text="SEND FRIEND REQUEST"
            android:textColor="@android:color/white"
            android:textSize="8dp" />

        <Button
            android:id="@+id/rejectreqbtn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/holo_red_dark"
            android:padding="5dp"
            android:text="DECLINE FRIEND REQUEST"
            android:textColor="@android:color/white"
            android:textSize="8dp"
            android:visibility="gone"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
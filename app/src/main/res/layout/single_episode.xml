<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/single_episode_image"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_below="@+id/single_episode_image"
        android:id="@+id/single_episode_number"
        android:fontFamily="@font/anton"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/single_episode_name"
        android:layout_below="@id/single_episode_number"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/anton"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_episode_name"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/anton"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:id="@+id/single_episode_overview"
        android:textColor="@android:color/white"
        />



</RelativeLayout>
</ScrollView>

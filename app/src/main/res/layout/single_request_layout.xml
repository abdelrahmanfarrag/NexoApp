<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/request_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@mipmap/default_pp" />

        <TextView
            android:id="@+id/request_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/request_image"
            android:layout_alignTop="@+id/request_image"
            android:layout_marginStart="61dp"
            android:text="USERNAME"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/request_status"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/request_name"
            android:layout_below="@+id/request_name"
            android:layout_marginTop="12dp"
            android:text="STATUS"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/request_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="0h"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/requst_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/request_name"
            android:layout_alignBottom="@+id/request_name"
            android:layout_alignStart="@+id/request_decline_btn"
            android:background="@android:color/holo_green_dark"
            android:padding="10dp"
            android:text="ACCEPT"
            android:textColor="@android:color/white"
            android:textSize="10dp" />

        <Button
            android:id="@+id/request_decline_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/request_status"
            android:layout_marginEnd="9dp"
            android:background="@android:color/holo_red_dark"
            android:padding="10dp"
            android:text="DECLINE"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>
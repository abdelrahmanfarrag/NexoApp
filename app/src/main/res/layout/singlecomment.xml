<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/default_pp"
        android:id="@+id/usercomment_image"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/usercomment_image"
        android:background="#E3EAEE">

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/usercomment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:text="UserNaME"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/usercomment_contain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/usercomment_name"

            android:layout_below="@+id/usercomment_name"
            android:layout_margin="5dp"
            android:text="THAT IS WILL BE COMMENT"
            android:textAlignment="center"

            android:textColor="@android:color/black" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="60dp"
        android:text="0h"
        android:id="@+id/usercomment_time"
        android:layout_below="@+id/relative"/>



</RelativeLayout>
</android.support.v7.widget.CardView>

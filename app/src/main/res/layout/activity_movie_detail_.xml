<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mana.nexo_app.activities.MovieDetail_Activity">

        <ImageView
            android:id="@+id/movie_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha=".4"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/movie_detail_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/movie_over"
            android:layout_marginTop="13dp" />

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/movie_vote"
            android:layout_alignTop="@+id/movie_detail_image"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/anton"
            android:padding="5dp"
            android:text="MANA"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/movie_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/movie_lang"
            android:layout_below="@+id/movie_name"
            android:fontFamily="@font/anton"
            android:padding="5dp"
            android:text="MANA"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/movie_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/movie_date"
            android:layout_below="@+id/movie_vote"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/anton"
            android:padding="5dp"
            android:text="MANA"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/movie_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_lang"
            android:layout_marginStart="59dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/movie_detail_image"
            android:fontFamily="@font/anton"
            android:padding="5dp"
            android:text="MANA"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anton"
            android:id="@+id/watch_availble"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/movie_date"
            android:layout_marginStart="59dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/movie_detail_image"
            android:textSize="10dp"
            android:text="MANA"/>


        <TextView
            android:id="@+id/movie_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_detail_image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hanalei_fill"
            android:padding="5dp"
            android:text="OVERVIEW"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_over"
            android:id="@+id/trailers"
            android:text="TRAILERS"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/anton"
            android:textColor="@android:color/black"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/movietrailers_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/trailers"
            android:layout_marginTop="5dp">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/anton"
            android:text="REVIEWS"
            android:layout_below="@+id/movietrailers_view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/reviews"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/moviewreview_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reviews"></android.support.v7.widget.RecyclerView>


        <Button
            android:id="@+id/movie_comu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/watch"
            android:layout_alignParentStart="true"
            android:background="#BE3144"
            android:fontFamily="@font/anton"
            android:text="COMMUNITY"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/watch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="WATCH IT !"
            android:textColor="@android:color/white"
            android:fontFamily="@font/anton"
            android:background="#368D8D"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>
</ScrollView>